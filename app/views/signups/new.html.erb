    <style>

    /* GLOBAL STYLES
    -------------------------------------------------- */
    /* Padding below the footer and lighter body text */

    body {
      padding-bottom: 40px;
      color: #5a5a5a;
    }


    .input-block-level {
      width: 50%;
      margin-left: auto;
      margin-right: auto;
    }

    /* CUSTOMIZE THE NAVBAR
    -------------------------------------------------- */

    /* Special class on .container surrounding .navbar, used for positioning it into place. */
    .navbar-wrapper {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 10;
      margin-top: 20px;
      margin-bottom: -90px; /* Negative margin to pull up carousel. 90px is roughly margins and height of navbar. */
    }
    .navbar-wrapper .navbar {

    }

    /* Remove border and change up box shadow for more contrast */
    .navbar .navbar-inner {
      border: 0;
      -webkit-box-shadow: 0 2px 10px rgba(0,0,0,.25);
         -moz-box-shadow: 0 2px 10px rgba(0,0,0,.25);
              box-shadow: 0 2px 10px rgba(0,0,0,.25);
    }

    /* Downsize the brand/project name a bit */
    .navbar .brand {
      padding: 14px 0 16px 0; /* Increase vertical padding to match navbar links */
      font-size: 16px;
      font-weight: bold;
      text-shadow: 0 -1px 0 rgba(0,0,0,.5);
      margin-left: 0px;
    }

    /* Navbar links: increase padding for taller navbar */
    .navbar .nav > li > a {
      padding: 15px 20px;
    }

    /* Offset the responsive button for proper vertical alignment */
    .navbar .btn-navbar {
      margin-top: 10px;
    }

    .navbar-inner {
      margin: 0px;
    }

    .navbar-fixed-top .container,
    .container {
      width: 90%;
    }

    /* Customize the top container 
    ------------------------------*/

    .row-fluid {
      position: relative;
      *zoom: 1;
      margin: 0;
      max-width: 100%;
      -webkit-box-sizing: border-box;
         -moz-box-sizing: border-box;
              box-sizing: border-box;
    }
    .top-container {
      background-color: #eeeeee;
      padding-top: 100px;
      padding-bottom: 50px;
    }

    .top-container .span5 {
      padding-left: 30px;
    }

    /* MARKETING CONTENT
    -------------------------------------------------- */

    /* Center align the text within the three columns below the carousel */
    .action {
      padding-top: 50px;
    }

    .mobile-version {
      display: none;
    }

    .marketing .span4 {
      text-align: left;
    }

    .marketing .span4 p {
      margin-left: 10px;
      margin-right: 10px;
    }

    /* Featurettes
    ------------------------- */

    .featurette-divider {
      margin: 40px 0; /* Space out the Bootstrap <hr> more */
    }
    .featurette {
      margin: 40px 0;
      padding-top: 10px; /* Vertically center images part 1: add padding above and below text. */
      overflow: hidden; /* Vertically center images part 2: clear their floats. */
    }
    .featurette-image {
      margin-top: 0px; /* Vertically center images part 3: negative margin up the image the same amount of the padding to center it. */
    }

    .featurette-block {
      -webkit-box-sizing: border-box;
         -moz-box-sizing: border-box;
              box-sizing: border-box;
      display: inline-block;
      width: 50%;
    }

    /* Give some space on the sides of the floated elements so text doesn't run right into it. */
    .featurette-image.pull-left {
      padding-right: 40px;
    }
    .featurette-image.pull-right {
      padding-left: 40px;
    }

    /* Thin out the marketing headings */
    .featurette-heading {
      font-size: 50px;
      font-weight: 300;
      line-height: 1;
      letter-spacing: -1px;
    }
    .featurette-sub-heading {
      font-size: 30px;
      font-weight: 300;
      line-height: 1;
      letter-spacing: -1px;
    }
    .wrap3 {
      display: inline-block;
      text-align: center;
      padding: 30px;
      margin: 0px;
      font-size: 18px;
      font-weight: 200;
      line-height: 30px;
      color: inherit;
      background-color: #eeeeee;
      -webkit-border-radius: 6px;
        -moz-border-radius: 6px;
          border-radius: 6px;
      -webkit-user-select: none;
         -moz-user-select: none;
          -ms-user-select: none;
    }

    /* RESPONSIVE CSS
    -------------------------------------------------- */

    @media (max-width: 979px) {
      [class*="span"],
      .uneditable-input[class*="span"],
      .row-fluid [class*="span"] {
        display: block;
        float: none;
        width: 100%;
        margin-left: 0;
        -webkit-box-sizing: border-box;
           -moz-box-sizing: border-box;
                box-sizing: border-box;
      }

      .top-container {
        padding-top: 5%;
      }

      .top-container .span5 {
        padding-left: 0;
      }

      .navbar-fixed-top {
        margin-bottom: 0;
      }

      .container.navbar-wrapper {
        margin-bottom: 0;
        width: auto;
      }
      .navbar-inner {
        border-radius: 0;
        margin: 0px;
      }

      .action {
        padding-top: 0;
        padding-bottom: 0;
      }

      .mobile-version {
        display: inherit;
      }

      .desktop-version {
        display: none;
      }

      .carousel .item {
        height: 500px;
      }
      .carousel img {
        width: auto;
        height: 500px;
      }

      .featurette {
        height: auto;
        padding: 10;
      }

      .featurette-block {
        display: block;
        width: 100%;
      }
      .featurette-image.pull-left,
      .featurette-image.pull-right {
        float: none;
        margin: 0 auto 20px auto;
        padding: 0;
        text-align: center;
      }
      .wrap3 {
        float: none;
      }
    }


    @media (max-width: 767px) {
      body {
        padding: 0 0 40px;
      }
      .navbar-inner {
        margin: 0px;
      }

      .navbar-fixed-top {
        margin-right: 0;
        margin-left: 0;
      }

      .top-container {
        padding-bottom: 10px;
      }

      .carousel {
        margin-left: -20px;
        margin-right: -20px;
      }
      .carousel .container {

      }
      .carousel .item {
        height: 300px;
      }
      .carousel img {
        height: 300px;
      }
      .carousel-caption {
        width: 65%;
        padding: 0 70px;
        margin-top: 100px;
      }
      .carousel-caption h1 {
        font-size: 30px;
      }
      .carousel-caption .lead,
      .carousel-caption .btn {
        font-size: 18px;
      }
      .featurette-sub-heading {
        font-size: 22px;
      }
      .marketing .span4 + .span4 {
        margin-top: 40px;
      }

      .featurette-heading {
        font-size: 30px;
      }
      .lead {
        font-size: 18px;
        line-height: 1.5;
      }
    }

    @media (max-width: 480px) {
      .flex-video {
        padding-top: 50px;
      }      
    }

    @media (max-width: 320px) {
      .navbar-fixed-top .container,
      .container {     
        width: 100%;
      }

      .navbar-fixed-top .container,
      .top-container,
      .container.marketing {
        -webkit-box-sizing: border-box;
           -moz-box-sizing: border-box;
                box-sizing: border-box; 
        padding-right: 20px;
        padding-left: 20px;  
      }
    }
    </style>

